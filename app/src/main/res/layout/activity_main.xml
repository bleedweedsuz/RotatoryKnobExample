<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <com.zwarriorteam.rotatoryknob.RotatoryKnobView
        android:id="@+id/rotatoryKnobView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="612dp"

        app:RotatoryKnob_MaxRotorValue="80"
        app:RotatoryKnob_MinRotorValue="20"
        app:RotatoryKnob_RotorStep="1"
        app:RotatoryKnob_RotorValue="30"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"

        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/rotatoryKnobView2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rotatoryKnobView2" />

    <com.zwarriorteam.rotatoryknob.RotatoryKnobView
        android:id="@+id/rotatoryKnobView1"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_marginTop="23dp"
        app:RotatoryKnob_ImageActive="@drawable/test_knob_rotor"
        app:RotatoryKnob_ImageBack="@drawable/test_knob_back"
        app:RotatoryKnob_ImageInactive="@drawable/test_knob_rotor_inactive"

        app:RotatoryKnob_MaxRotorValue="80"
        app:RotatoryKnob_MinRotorValue="20"
        app:RotatoryKnob_RotorStep="1"
        app:RotatoryKnob_RotorValue="30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rotatoryKnobView2"
        app:layout_constraintVertical_bias="0.108" />
    <TextView
        android:id="@+id/rotatoryKnobView1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rotatoryKnobView1" />
</androidx.constraintlayout.widget.ConstraintLayout>